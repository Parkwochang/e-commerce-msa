{
  "name": "@repo/proto",
  "version": "0.0.1",
  "private": true,
  "description": "Shared Protocol Buffer definitions and generated TypeScript types for gRPC services",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "proto/**/*.proto"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm generate:ts && tsc --build",
    "generate:script": "bash ./scripts/generate-proto.sh",
    "generate:ts": "tsx src/generate-proto.ts",
    "clean": "rm -rf dist src/generated"
  },
  "dependencies": {
    "@bufbuild/protobuf": "catalog:grpc"
  },
  "devDependencies": {
    "@grpc/grpc-js": "catalog:grpc",
    "@nestjs/microservices": "catalog:nestjs",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.10.2",
    "rxjs": "catalog:",
    "ts-proto": "catalog:grpc",
    "typescript": "catalog:",
    "tsx": "^4.7.0"
  },
  "peerDependencies": {
    "@grpc/grpc-js": "catalog:grpc",
    "@nestjs/microservices": "catalog:nestjs",
    "rxjs": "catalog:"
  },
  "peerDependenciesMeta": {
    "@nestjs/microservices": {
      "optional": true
    }
  }
}
