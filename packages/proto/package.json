{
  "name": "@repo/proto",
  "version": "0.0.1",
  "private": true,
  "description": "Shared Protocol Buffer definitions and generated TypeScript types for gRPC services",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "**/*.proto"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./proto/*.proto": "./proto/*.proto"
  },
  "scripts": {
    "build": "pnpm generate && tsc",
    "generate": "bash ./scripts/generate-proto.sh",
    "clean": "rm -rf dist src/generated",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@bufbuild/protobuf": "catalog:grpc"
  },
  "devDependencies": {
    "@grpc/grpc-js": "catalog:grpc",
    "@nestjs/microservices": "catalog:nestjs",
    "@types/node": "^22.10.2",
    "rxjs": "catalog:",
    "ts-proto": "catalog:grpc",
    "@repo/typescript-config": "workspace:*",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@grpc/grpc-js": "^1.0.0",
    "@nestjs/microservices": "catalog:nestjs",
    "rxjs": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/microservices": {
      "optional": true
    }
  }
}
