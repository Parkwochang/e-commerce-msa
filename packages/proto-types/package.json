{
  "name": "@repo/proto-types",
  "version": "0.0.1",
  "private": true,
  "description": "Shared Protocol Buffer definitions and generated TypeScript types for gRPC services",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./user": {
      "types": "./dist/user.d.ts",
      "default": "./dist/user.js"
    },
    "./order": {
      "types": "./dist/order.d.ts",
      "default": "./dist/order.js"
    },
    "./product": {
      "types": "./dist/product.d.ts",
      "default": "./dist/product.js"
    }
  },
  "scripts": {
    "build": "pnpm generate && tsc",
    "generate": "bash ./scripts/generate-proto.sh",
    "clean": "rm -rf dist src/generated",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.2.2",
    "@grpc/grpc-js": "catalog:grpc",
    "@grpc/proto-loader": "catalog:grpc",
    "@nestjs/microservices": "catalog:nestjs",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "ts-proto": "catalog:grpc",
    "@repo/typescript-config": "workspace:*",
    "typescript": "catalog:"
  }
}
